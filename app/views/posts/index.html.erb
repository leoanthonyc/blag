<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<%= link_to 'New Post', new_user_post_path(current_user) %>

<table>
  <thead>
    <tr>
      <th>Post</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.content, user_post_path(post.user, post) %></td>
        <td><%= post.user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

