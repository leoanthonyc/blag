<p id="notice"><%= notice %></p>

<%= link_to 'Home', root_path %>
<%= link_to 'User Posts', user_posts_path(@post.user) %>

<%= turbo_frame_tag "post" do %>
  <p>
    <%= @post.content %>
  </p>

  <p>
    <%= @post.user.email %>
  </p>

  <% if @post.user == current_user %>
    <%= link_to 'Edit', edit_user_post_path(@post.user, @post) %> |
    <%= link_to 'Destroy', [@post.user, @post], method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
<% end %>

<div id="comments">
  <h2>Comments</h2>
  <%= render @post.comments %>
</div>

<%= turbo_frame_tag 'new_comment', src: new_user_post_comment_path(@post.user, @post), target: '_top' %>
