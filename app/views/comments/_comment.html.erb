<%= turbo_frame_tag comment do %>
  <p><%= comment.content %></p>
  <p>
    <%= link_to 'Edit', edit_user_post_comment_path(comment.user, comment.post, comment) %>
    <small>
      <%= comment.user.email %> @
      <em>
        <%= comment.created_at.to_formatted_s(:short) %>
      </em>
    </small>
  </p>
<% end %>
